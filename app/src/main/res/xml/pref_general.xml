<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General">
        <ListPreference
            android:entries="@array/MONEDA_BASE"
            android:entryValues="@array/MONEDA_BASE_CODIGO"
            android:key="MONEDA_BASE"
            android:title="Moneda Base"
            android:icon="@drawable/ic_money_white"
            android:defaultValue="ARS"></ListPreference>
        <ListPreference
            android:entries="@array/INTERVALO_NOTIFICACIONES_NOMBRES"
            android:entryValues="@array/INTERVALO_NOTIFICACIONES"
            android:key="INTERVALO_NOTIFICACIONES"
            android:title="Intervalo de ActualizaciÃ³n"
            android:icon="@drawable/ic_update_white"
            android:defaultValue="1"></ListPreference>
    </PreferenceCategory>
    <PreferenceCategory
        android:enabled="true"
        android:title="Notificaciones">
        <SwitchPreference
            android:defaultValue="true"
            android:key="NOTIFICACIONES_ACTIVAS"
            android:summary="Recibir notificaciones cuando haya cambios bruscos en las cotizaciones"
            android:title="Activar Notificaciones"></SwitchPreference>
        <SwitchPreference
            android:defaultValue="true"
            android:key="NOTIFICACIONES_SONIDO"
            android:title="Sonido"
            android:dependency="NOTIFICACIONES_ACTIVAS"></SwitchPreference>
        <SwitchPreference
            android:defaultValue="true"
            android:key="NOTIFICACIONES_VIBRAR"
            android:title="Vibrar"
            android:dependency="NOTIFICACIONES_ACTIVAS"></SwitchPreference>
        <SwitchPreference
            android:defaultValue="false"
            android:key="NOTIFICACIONES_AVISO_IMPORTANTE"
            android:title="Aviso Importante"
            android:dependency="NOTIFICACIONES_ACTIVAS"></SwitchPreference>
    </PreferenceCategory>

</PreferenceScreen>
